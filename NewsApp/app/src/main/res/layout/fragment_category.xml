<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Choose a category to start reading"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_business"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_business_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_business" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_business_img"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-black"
                    android:text="business"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_entertainment"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_entertainment_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_entertainment" />

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_entertainment_img"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="entertainment"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_general"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_general_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_general" />

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_general_img"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="general"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_health"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_health_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_health" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_health_img"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-black"
                    android:text="health"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_science"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_science_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_science" />

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_science_img"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="science"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_sports"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_sports_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_sports" />

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_sports_img"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="sports"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/category_technology"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ellipse_2">

                <ImageView
                    android:id="@+id/category_technology_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_technology" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_technology_img"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-black"
                    android:text="technology"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></RelativeLayout>
    </LinearLayout>

</LinearLayout>